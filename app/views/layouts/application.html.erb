<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <div class="header">
      <% if @current_user == nil %>
        <i class="loginbutton"><%= link_to("ログイン", "/login") %></i>
      <% else %>
        <%= link_to("/tweets/new") do %>
          <span class="fa fa-edit write"></span>
        <% end %>
        <i class="loginbutton"><%= link_to("ログアウト", "/logout", {method: :post}) %></i>
      <% end %>
      
    </div>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
  
    <%= yield %>
  </body>
  
  <script>
    $(function() {
      setTimeout(function() {
        $('#notice').fadeOut("slow")
      }, 800);
    });
  </script>
</html>
